{
    "$schema": "https://json-schema.org/draft-07/schema#",
    "$id": "invitation_request.json",
    "type": "object",
    "title": "InvitationRequest",
    "description": "A request object for invitation operations",
    "deprecated": false,
    "properties": {
        "date": {
            "type": "string",
            "format": "date-time",
            "description": "The timestamp of the request (ISO 8601 format)",
            "examples": [
                "2025-09-05T15:30:00Z",
                "2025-03-14T17:22:45Z"
            ]
        },
        "request_type": {
            "type": "string",
            "description": "The type of invitation request being made",
            "examples": [
                "INVITATION_GET",
                "INVITATION_SEND"
            ]
        },
        "target_id": {
            "type": "string",
            "format": "uuid",
            "description": "The UUID of the requester",
            "examples": [
                "123e4567-e89b-12d3-a456-426614174000",
                "fff66666-7777-8888-9999-000011112222"
            ]
        },
        "recipient_id": {
            "type": [
                "string",
                "null"
            ],
            "format": "uuid",
            "description": "Optional UUID of the recipient of a request",
            "examples": [
                "987e6543-e21b-34c3-b456-426614174999",
                "ggg77777-8888-9999-0000-111122223333"
            ]
        }
    },
    "required": [
        "date",
        "request_type",
        "target_id"
    ],
    "additionalProperties": true
}