{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "invitation_request.json",
    "type": "object",
    "title": "InvitationRequest",
    "description": "A request object for invitation operations",
    "deprecated": false,
    "properties": {
        "date": {
            "type": "string",
            "format": "date-time",
            "description": "The timestamp of the request (ISO 8601 format)",
            "example": "2025-09-05T15:30:00Z"
        },
        "request_type": {
            "type": "string",
            "description": "The type of invitation request being made",
            "example": "INVITATION_GET"
        },
        "target_id": {
            "type": "string",
            "format": "uuid",
            "description": "The UUID of the requester",
            "example": "123e4567-e89b-12d3-a456-426614174000"
        },
        "recipient_id": {
            "type": "string",
            "format": "uuid",
            "nullable": true,
            "description": "Optional UUID of the recipient of a request",
            "example": "987e6543-e21b-34c3-b456-426614174999"
        }
    },
    "required": [
        "date",
        "request_type",
        "target_id"
    ],
    "additionalProperties": true
}