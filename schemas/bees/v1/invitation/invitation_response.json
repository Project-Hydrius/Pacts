{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "invitation_response.json",
    "type": "object",
    "title": "InvitationResponse",
    "description": "A response object for invitation operations",
    "deprecated": false,
    "properties": {
        "date": {
            "type": "string",
            "format": "date-time",
            "description": "The timestamp of the response (ISO 8601 format)",
            "example": "2025-09-05T15:30:00Z"
        },
        "request_type": {
            "type": "string",
            "description": "The type of invitation request that was made",
            "example": "INVITATION_GET"
        },
        "response_status": {
            "type": "string",
            "description": "The status of the response",
            "example": "OK"
        },
        "target_id": {
            "type": "string",
            "format": "uuid",
            "description": "The UUID of the target player",
            "example": "123e4567-e89b-12d3-a456-426614174000"
        },
        "response_message": {
            "type": "string",
            "description": "Optional message providing context about the response",
            "nullable": true,
            "example": "Invitation data retrieved successfully"
        },
        "invitations": {
            "type": "array",
            "description": "Array of invitations",
            "nullable": true,
            "readOnly": true,
            "items": {
                "$ref": "invitation.json"
            }
        }
    },
    "required": [
        "date",
        "request_type",
        "response_status",
        "target_id"
    ],
    "additionalProperties": true
}