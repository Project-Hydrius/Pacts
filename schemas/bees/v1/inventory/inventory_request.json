{
    "$schema": "https://json-schema.org/draft-07/schema#",
    "$id": "inventory_request.json",
    "type": "object",
    "title": "InventoryRequest",
    "description": "A request object containing inventory data and associated metadata.",
    "deprecated": false,
    "properties": {
        "date": {
            "type": "string",
            "format": "date-time",
            "description": "The timestamp of the request (ISO 8601 format).",
            "examples": [
                "2025-09-05T15:30:00Z",
                "2025-06-25T08:45:10Z"
            ]
        },
        "request_type": {
            "type": "string",
            "description": "The type of request being made (e.g. INVENTORY_GET, INVENTORY_UPDATE).",
            "examples": [
                "INVENTORY_GET",
                "INVENTORY_UPDATE"
            ]
        },
        "target_id": {
            "type": "string",
            "format": "uuid",
            "description": "The UUID of the target player, usually the requester.",
            "examples": [
                "123e4567-e89b-12d3-a456-426614174000",
                "bbb22222-3333-4444-5555-666677778888"
            ]
        },
        "profile_id": {
            "type": "string",
            "format": "uuid",
            "description": "The UUID of the profile to which the inventory belongs, usually the requester.",
            "examples": [
                "987e6543-e21b-34c3-b456-426614174999",
                "ccc33333-4444-5555-6666-777788889999"
            ]
        },
        "inventory": {
            "type": [
                "array",
                "null"
            ],
            "description": "An array of inventory items, typically the entire inventory.",
            "items": {
                "$ref": "inventory_item.json"
            }
        },
        "items": {
            "type": [
                "array",
                "null"
            ],
            "description": "An array of inventory items, typically the items to be added or removed.",
            "items": {
                "$ref": "inventory_item.json"
            }
        },
        "slot": {
            "type": [
                "integer",
                "null"
            ],
            "description": "Slot number associated with the inventory or action.",
            "minimum": 0,
            "examples": [
                3,
                7
            ]
        }
    },
    "required": [
        "date",
        "request_type",
        "target_id",
        "profile_id"
    ],
    "oneOf": [
        {
            "required": [
                "inventory"
            ]
        },
        {
            "required": [
                "items"
            ]
        },
        {
            "required": [
                "slot"
            ]
        }
    ],
    "not": {
        "allOf": [
            {
                "required": [
                    "inventory"
                ]
            },
            {
                "required": [
                    "items"
                ]
            }
        ]
    },
    "additionalProperties": true
}