{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "inventory_response.json",
    "type": "object",
    "title": "InventoryResponse",
    "description": "A response object containing inventory data and associated metadata.",
    "deprecated": false,
    "properties": {
        "date": {
            "type": "string",
            "format": "date-time",
            "description": "The date and time of the response, in ISO 8601 format.",
            "example": "2025-09-05T15:30:00Z"
        },
        "request_type": {
            "type": "string",
            "description": "The type of request that was made (e.g., 'INVENTORY_GET', 'INVENTORY_UPDATE').",
            "example": "INVENTORY_GET"
        },
        "response_status": {
            "type": "string",
            "description": "The status of the response.",
            "example": "OK"
        },
        "target_id": {
            "type": "string",
            "format": "uuid",
            "description": "The UUID of the target player or entity.",
            "example": "123e4567-e89b-12d3-a456-426614174000"
        },
        "profile_id": {
            "type": "string",
            "format": "uuid",
            "description": "The UUID of the profile.",
            "example": "987e6543-e21b-34c3-b456-426614174999"
        },
        "response_message": {
            "type": "string",
            "description": "Optional message providing context or detail about the response.",
            "nullable": true,
            "example": "Inventory returned successfully."
        },
        "inventory": {
            "type": "array",
            "description": "Array of inventory items attached to the profile.",
            "nullable": true,
            "readOnly": true,
            "items": {
                "$ref": "inventory_item.json"
            },
            "example": [
                {
                    "material": "diamond",
                    "slot": 5,
                    "amount": 3
                }
            ]
        }
    },
    "required": [
        "date",
        "request_type",
        "response_status",
        "target_id",
        "profile_id"
    ],
    "additionalProperties": true
}