{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "inventory_item.json",
    "type": "object",
    "title": "InventoryItem",
    "description": "An item in the inventory",
    "deprecated": false,
    "properties": {
        "slot": {
            "type": "number",
            "description": "The inventory slot number",
            "minimum": 0,
            "example": 5
        },
        "material": {
            "type": "string",
            "description": "The material/block type of the item",
            "example": "minecraft:diamond_sword"
        },
        "amount": {
            "type": "number",
            "description": "The quantity of the item",
            "minimum": 1,
            "example": 64
        },
        "enchantment_data": {
            "type": "array",
            "description": "Array of enchantments applied to the item",
            "nullable": true,
            "items": {
                "type": "object",
                "properties": {
                    "enchantment_id": {
                        "type": "string",
                        "description": "The enchantment identifier",
                        "example": "minecraft:sharpness"
                    },
                    "enchantment_level": {
                        "type": "number",
                        "description": "The level of the enchantment",
                        "minimum": 1,
                        "example": 3
                    }
                },
                "required": [
                    "enchantment_id",
                    "enchantment_level"
                ]
            }
        },
        "nbt_data": {
            "type": "object",
            "description": "Custom NBT data for the item",
            "nullable": true,
            "properties": {
                "id": {
                    "type": "string",
                    "description": "Unique identifier for the item"
                },
                "rarity": {
                    "type": "string",
                    "description": "Rarity level of the item"
                },
                "level": {
                    "type": "number",
                    "description": "Item level"
                },
                "modifier": {
                    "type": "string",
                    "description": "Item modifier type"
                },
                "nectar": {
                    "type": "array",
                    "description": "Nectar data for the item",
                    "items": {
                        "type": "object",
                        "properties": {
                            "slot": {
                                "type": "number",
                                "description": "Nectar slot number"
                            },
                            "statistics": {
                                "type": "array",
                                "description": "Statistics for the nectar",
                                "items": {
                                    "type": "object",
                                    "properties": {
                                        "type": {
                                            "type": "string",
                                            "description": "Statistic type"
                                        },
                                        "value": {
                                            "type": "number",
                                            "description": "Statistic value"
                                        },
                                        "boosts": {
                                            "type": "number",
                                            "description": "Number of boosts applied"
                                        }
                                    },
                                    "required": [
                                        "type",
                                        "value"
                                    ]
                                }
                            }
                        },
                        "required": [
                            "slot",
                            "statistics"
                        ]
                    }
                }
            }
        }
    },
    "required": [
        "slot",
        "material",
        "amount"
    ]
}