{
    "$schema": "https://json-schema.org/draft-07/schema#",
    "$id": "player_request.json",
    "type": "object",
    "title": "PlayerRequest",
    "description": "A request object for player operations",
    "deprecated": false,
    "properties": {
        "date": {
            "type": "string",
            "format": "date-time",
            "description": "The timestamp of the request (ISO 8601 format)",
            "examples": [
                "2025-09-05T15:30:00Z",
                "2025-12-01T10:15:45Z"
            ]
        },
        "request_type": {
            "type": "string",
            "description": "The type of player request being made",
            "examples": [
                "PLAYER_GET",
                "PLAYER_UPDATE"
            ]
        },
        "target_id": {
            "type": "string",
            "format": "uuid",
            "description": "The UUID of the target player",
            "examples": [
                "123e4567-e89b-12d3-a456-426614174000",
                "def45678-9012-3456-7890-123456789abc"
            ]
        }
    },
    "required": [
        "date",
        "request_type",
        "target_id"
    ],
    "additionalProperties": true
}