{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "profile_member.json",
    "type": "object",
    "title": "ProfileMember",
    "description": "A member of a profile",
    "deprecated": false,
    "properties": {
        "id": {
            "type": "string",
            "format": "uuid",
            "description": "Unique identifier for the profile member",
            "example": "123e4567-e89b-12d3-a456-426614174000"
        },
        "name": {
            "type": "string",
            "description": "Display name of the profile",
            "example": "POPPY"
        },
        "role": {
            "type": "string",
            "description": "Role of the member within the profile",
            "enum": [
                "OWNER",
                "MEMBER"
            ],
            "example": "MEMBER"
        },
        "slot": {
            "type": "number",
            "description": "Slot position of profile",
            "minimum": 0,
            "maximum": 4,
            "example": 1
        },
        "created_at": {
            "type": "string",
            "format": "date-time",
            "description": "Timestamp when the member created the profile",
            "readOnly": true,
            "example": "2025-09-05T15:30:00Z"
        }
    },
    "required": [
        "id",
        "name",
        "role",
        "slot",
        "created_at"
    ],
    "additionalProperties": false
}