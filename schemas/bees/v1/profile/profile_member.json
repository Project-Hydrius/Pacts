{
    "$schema": "https://json-schema.org/draft-07/schema#",
    "$id": "profile_member.json",
    "type": "object",
    "title": "ProfileMember",
    "description": "A member of a profile",
    "deprecated": false,
    "properties": {
        "id": {
            "type": "string",
            "format": "uuid",
            "description": "Unique identifier for the profile member",
            "examples": [
                "123e4567-e89b-12d3-a456-426614174000",
                "456e7890-f12c-34d5-e678-901234567890"
            ]
        },
        "name": {
            "type": "string",
            "description": "Display name of the profile",
            "examples": [
                "POPPY",
                "DAISY"
            ]
        },
        "role": {
            "type": "string",
            "description": "Role of the member within the profile",
            "enum": [
                "OWNER",
                "MEMBER"
            ],
            "examples": [
                "MEMBER",
                "OWNER"
            ]
        },
        "slot": {
            "type": "integer",
            "description": "Slot position of profile",
            "minimum": 0,
            "maximum": 4,
            "examples": [
                1,
                3
            ]
        },
        "created_at": {
            "type": "string",
            "format": "date-time",
            "description": "Timestamp when the member created the profile",
            "readOnly": true,
            "examples": [
                "2025-09-05T15:30:00Z",
                "2025-10-15T09:45:30Z"
            ]
        }
    },
    "required": [
        "id",
        "name",
        "role",
        "slot",
        "created_at"
    ],
    "additionalProperties": false
}